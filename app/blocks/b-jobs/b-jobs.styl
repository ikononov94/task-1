  .jobs-block-even__pagination-3_horizontal
    top 370px
  .jobs-block__pagination-4_horizontal
    top 425px
  .jobs-block__pagination-2_horizontal
    top 390px

  .jobs-block__slider
    width 704px
    height 380px
    margin-top 20px
    left 50%
    margin-left -352px

  .jobs-block__slides
    width 704px
    height 350px

  .slide
    width 704px



@media (min-width 550px) and (max-width 970px)

  .jobs-block-even .jobs-block__about
  .jobs-block__about
    flex-direction row
    margin 0 32px

@media (max-width 549px)
  .jobs-block-even .jobs-block__about
  .jobs-block__about
    flex-direction row
    margin 0 20px

@media (max-width 767px)
  .jobs-block__about
    flex-direction column
  .jobs-block-even .jobs-block__about
    flex-direction column
  .jobs-block__about-bottom
    margin-top 20px


@media (min-width 550px) and (max-width 767px)
  .jobs-block__pagination-4_horizontal
    top 290px
  .jobs-block__pagination-2_horizontal
    top 255px
  .jobs-block-even__pagination-3_horizontal
    top 235px

  .jobs-block__slider
    width 490px
    height 230px
    margin-top 20px
    left 50%
    margin-left -245px

  .jobs-block__slides
    width 490px
    height 220px

  .slide
    width 490px

@media (max-width 549px)
  .jobs-block__pagination-4_horizontal
    top 220px
  .jobs-block__pagination-2_horizontal
    top 190px
  .jobs-block-even__pagination-3_horizontal
    top 170px
  .jobs-block__slider
    width 304px
    height 180px
    margin-top 20px
    left 50%
    margin-left -152px

  .jobs-block__slides
    width 304px
    height 151px

  .slide
    width 304px
/***************************END JOBS MEDIA*********************************************/
